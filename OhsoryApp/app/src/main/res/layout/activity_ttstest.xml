<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TTS 테스트"
            android:textSize="22dp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#80000000"
        android:layout_below="@id/ll_top_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_margin="40dp"
        android:layout_below="@id/ll_top_bar">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sp_model_name"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradient_spinner"/>

        <EditText
            android:id="@+id/et_text"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@id/sp_model_name"
            android:ems="10"
            android:text="청취할 텍스트를 입력해주세요."
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/stroke_ret"
            android:gravity="top"/>

        <Button
            android:id="@+id/bt_hear"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@drawable/button_selector"
            android:layout_below="@id/et_text"
            android:text="음성 합성 결과 청취"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/bt_hear"
            android:weightSum="2">

            <Button
                android:id="@+id/bt_dowload"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:text=" 다운로드 "
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_selector"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_height="68dp"
                android:layout_margin="8dp"
                android:text="공유"
                android:textSize="20dp"
                android:background="@drawable/button_selector"
                android:layout_weight="1"/>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>