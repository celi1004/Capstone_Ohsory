<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btn_rv_item_shared_model_manage"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="68dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rv_item_shared_model_manage_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="사용자 ID"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_rv_item_shared_model_manage_alarmsetting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center"
            android:text="알림 설정"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_rv_item_shared_model_manage_shareddate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="공유 일자"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_rv_item_shared_model_manage_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="상태"
            android:textSize="16dp" />

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary" />

</LinearLayout>