<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btn_rv_item_shared_model_manage"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="68dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:weightSum="10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rv_item_shared_model_manage_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="사용자 ID"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_rv_item_shared_model_manage_alarmsetting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="알림 설정"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_rv_item_shared_model_manage_auth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="다운로드 시 허락"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_rv_item_shared_model_manage_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="모델 공유"
                android:textSize="16dp"/>

            <Button
                android:id="@+id/btn_rv_item_shared_model_manage_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="취소"
                android:background="@drawable/button_selector"
               android:visibility="gone"
                android:textSize="14dp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary" />

</LinearLayout>