<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/ibtn_main_act_chart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tab_bar_chart"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ibtn_main_act_file"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tab_file"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/ibtn_main_act_bell"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tab_bell"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/ibtn_main_act_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tab_user"
            android:layout_weight="1"
            android:padding="4dp"/>

</LinearLayout>